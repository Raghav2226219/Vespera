generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  phonenumber  String
  password     String
  role         Role     @default(Viewer)
  createdAt    DateTime @default(now())
  refreshToken String?
}

enum Role {
  Owner
  Editor
  Viewer
}
